  "docker": {
    "api": {
      "cert": "dockerCLI-cert.pem",
      "key": "dockerCLI-key.pem",
      "password": "mibonbonantimonyglockenspiel"
    },
    "bindings": {
      "backups": {
        "filter": ".bak",
        "mount": {
          "Target": "/var/opt/anonym/backup",
          "Source": "backups",
          "Type": "bind",
          "Propagation": "shared"
        }
      },
      "private": {
        "filter": ".pem",
        "mount": {
          "Target": "/var/opt/anonym/private",
          "Source": "private",
          "Type": "bind",
          "Mode": "ro", 
          "ReadOnly": true,
          "Propagation": "shared"
        }
      },  
      "staging": {
        "mount": {
          "Target": "/var/opt/anonym/staging",
          "Source": "staging",
          "Type": "bind",
          "Propagation": "shared"
        }
      }
    },
    "daemon" : {
      "tls": true,
      "cert": "docker-cert.pem",
      "key": "docker-key.pem",
      "password": "W!sh!h@dArANd0mSecretGener@tor...MAB?l^1I-checkIN2tHaT",
      "tlsverify": true
    },  
    "pull": {
      "repo": "microsoft/mssql-server-linux",
      "tag": "2017-latest"
    },
    "sql": {
      "path": "/var/opt/mssql"
    }
},
  "mssql": {
    "env": {
      "ACCEPT_EULA": "Y",
      "MSSQL_MEMORY_LIMIT_MB": "",
      "MSSQL_LCID": "1033",
      "MSSQL_COLLATION": "",
      "MSSQL_TCP_PORT":" 1433",
      "MSSQL_IP_ADDRESS": "",
      "MSSQL_ENABLE_HADR": "0",
      "MSSQL_AGENT_ENABLED": "false",
      "MSSQL_MASTER_DATA_FILE": "",
      "MSSQL_MASTER_LOG_FILE": "",
      "MSSQL_SA_PASSWORD": "YourStrong!Passw0rd",
      "MSSQL_PID": "Developer",
      "MSSQL_BACKUP_DIR": "/var/opt/anonym/backup",
      "MSSQL_BIN_DIR": "/opt/mssql/bin",
      "MSSQL_DATA_DIR": "/var/opt/mssql/data",
      "MSSQL_ERRORLOG_DIR": "/var/opt/mssql/log",
      "MSSQL_LOG_DIR": "/var/opt/mssql/data",
      "MSSQL_DUMP_DIR": "/var/opt/mssql/log",
      "PRIVATE_DIR": "/var/opt/anonym/private",
      "STAGING_DIR": "/var/opt/anonym/staging"
    },
    "pkey-passphrase": "zist.d;m$$q1-pke_pazfrace",
    "conf": "/opt/mssql/lib/mssql-conf/mssql-conf.py",
    "pool":  {
      "connectionTimeout": 15000,
      "options": {
        "encrypt": false
      },
      "parseJSON": true,
      "pool": {
        "closeTimeoutMillis": 30000,
        "idleTimeoutMillis": 30000,
        "max": 10,
        "min": 0
      },
      "requestTimeout": 15000,
      "server": "localhost",
      "stream": false
    }
  },
  "sqlpad": {
    "runAtStartup": false
  },  
  "sqlcmd": {
    "prebatch": [
      "SET STATISTICS IO ON;",
      "SET STATISTICS TIME ON;"
    ],
    "prefix": [
      "SET QUOTED_IDENTIFIER OFF;",
      "SET ANSI NULLS ON;"
    ],
    "switch": {
      "U": "sa",
      "P": "$MSSQL_SA_PASSWORD",
      "r": "r",
      "I": "I",
      "h": -1
    }
  }
}
