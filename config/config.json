{
  "bcp": {
    "switch": {
      "placeholder": "not baked in, use bcp in container shell or host shell when mssql-tools on host"
    }
  },
  "cli": {
    "alwaysCheckSyntax": true,
    "bash": {
      "path": "bash"
    },
    "ca": {
      "key": "CA-key.pem",
      "password": "!ge55a81e^but^p@SSaBle_ca-pkey-password",
      "cert": "CA-cert.pem"
    },
    "docs": {
      "path": "docs"
    },
    "editor": "emacs",
    "ide": "code",
    "odbc": {
      "path": "/opt/mssql-tools/bin"
    },
    "scripts": {
      "path": "scripts",
      "filter": ".sql"
    },
    "store": {
      "path" : "data"
    }
